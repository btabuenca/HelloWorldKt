<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/mainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to second activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/osmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to OpenStreetMap activity"
        app:layout_constraintTop_toBottomOf="@id/mainButton"
        app:layout_constraintStart_toStartOf="@id/mainButton" />

    <TextView
        android:id="@+id/mainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintTop_toBottomOf="@id/osmButton"
        app:layout_constraintStart_toStartOf="@id/osmButton" />


</androidx.constraintlayout.widget.ConstraintLayout>